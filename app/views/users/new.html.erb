<% provide(:title, t('signup.title')) %>
<h1 class="centered-title"><%= t('signup.title') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, t('signup.name_label') %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, t('signup.email_label') %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, t('signup.password_label') %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, t('signup.password_confirmation_label') %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <div class="center-button">
        <%= f.submit t('signup.submit_button'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
