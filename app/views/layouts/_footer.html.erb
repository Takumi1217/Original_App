              <li><%= link_to t('footer.area_links.ebbisu'), events_path(q: { area_eq: "恵比寿" }) %></li>
              <li><%= link_to t('footer.area_links.daikanyama'), events_path(q: { area_eq: "代官山" }) %></li>
              <li><%= link_to t('footer.area_links.nakameguro'), events_path(q: { area_eq: "中目黒" }) %></li>
              <li><%= link_to t('footer.area_links.omotesando'), events_path(q: { area_eq: "表参道" }) %></li>
            </ul>
          </li>
          <li><strong><%= t('footer.category') %></strong>
            <ul>
              <li><%= link_to t('footer.category_links.gourmet'), events_path(q: { category_eq: "グルメ" }) %></li>
              <li><%= link_to t('footer.category_links.shopping'), events_path(q: { category_eq: "ショッピング" }) %></li>
              <li><%= link_to t('footer.category_links.experience'), events_path(q: { category_eq: "体験" }) %></li>
              <li><%= link_to t('footer.category_links.exhibition'), events_path(q: { category_eq: "展覧会" }) %></li>
              <li><%= link_to t('footer.category_links.onsen'), events_path(q: { category_eq: "温泉" }) %></li>
              <li><%= link_to t('footer.category_links.subculture'), events_path(q: { category_eq: "サブカルチャー" }) %></li>
              <li><%= link_to t('footer.category_links.travel'), events_path(q: { category_eq: "旅行" }) %></li>
            </ul>
          </li>
          <li><strong><%= t('footer.when') %></strong>
            <ul>
              <li><%= link_to t('footer.when_links.today'), events_path(q: { start_date_gteq: Date.current.beginning_of_day, end_date_lteq: Date.current.end_of_day }) %></li>
              <li><%= link_to t('footer.when_links.tomorrow'), events_path(q: { start_date_gteq: Date.tomorrow.beginning_of_day, end_date_lteq: Date.tomorrow.end_of_day }) %></li>
              <li><%= link_to t('footer.when_links.this_weekend'), events_path(q: { start_date_gteq: Date.current.at_beginning_of_week.end_of_week.beginning_of_day, end_date_lteq: Date.current.at_beginning_of_week.end_of_week.end_of_day }) %></li>
              <li><%= link_to t('footer.when_links.spring'), events_path(q: { start_date_gteq: Date.new(Date.current.year, 3, 20), end_date_lteq: Date.new(Date.current.year, 6, 20) }) %></li>
