              <li><%= link_to t('footer.price_links.free'), events_path(q: { cost_eq: "0" }) %></li>
              <li><%= link_to t('footer.price_links.up_to_1000yen'), events_path(q: { cost_lteq: "1000" }) %></li>
              <li><%= link_to t('footer.price_links.from_1000yen_to_5000yen'), events_path(q: { cost_gteq: "1000", cost_lteq: "5000" }) %></li>
              <li><%= link_to t('footer.price_links.from_5000yen_to_10000yen'), events_path(q: { cost_gteq: "5000", cost_lteq: "10000" }) %></li>
              <li><%= link_to t('footer.price_links.from_10000yen'), events_path(q: { cost_gteq: "10000" }) %></li>
            </ul>
          </li>
