              <li><%= link_to t('footer.when_links.halloween'), events_path(q: { start_date_gteq: Date.new(Date.current.year, 10, 31), end_date_lteq: Date.new(Date.current.year, 10, 31).end_of_day }) %></li>
              <li><%= link_to t('footer.when_links.christmas'), events_path(q: { start_date_gteq: Date.new(Date.current.year, 12, 25), end_date_lteq: Date.new(Date.current.year, 12, 25).end_of_day }) %></li>
