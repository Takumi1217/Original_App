      <!-- リンク -->
      <div class="footer-section">
        <ul class="footer-links">
          <li><%= link_to t('footer.terms_of_service'), agreement_path %></li>
          <li><%= link_to t('footer.privacy_policy'), policy_path %></li>
          <li><%= link_to t('footer.help'), help_path %></li>
          <li><%= link_to t('footer.contact_us'), contact_path %></li>
        </ul>
