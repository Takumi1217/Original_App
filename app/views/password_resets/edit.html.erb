<% provide(:title, t('password_reset.title')) %>
<h1 class="centered-title"><%= t('password_reset.title') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password, t('password_reset.password_label') %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, t('password_reset.password_confirmation_label') %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <div class="center-button">
        <%= f.submit t('password_reset.submit_button_2'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
