<% provide(:title, t('login.title')) %>
<h1 class="centered-title"><%= t('login.title') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>
      <div class="form-group">
        <%= f.label :email, t('login.email_label') %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, t('login.password_label') %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span><%= t('login.remember_me_label') %></span>
        <% end %>
      </div>

      <div class="center-button">
        <%= f.submit t('login.submit_button'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to t('login.forgot_password'), new_password_reset_path %> / 
      <%= link_to t('login.signup'), signup_path %>
    </div>
  </div>
</div>
